<Window x:Class="CSGOUtility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:CSGOUtility.Views"
        mc:Ignorable="d"
        Title="CSGO Utility" Height="550" Width="725" Closing="Window_Closing">
    <Grid>
        <TabControl>
            <TabItem Header="Overview">
                <views:OverviewView />
            </TabItem>
            <TabItem Header="Current game">
                <views:CurrentGameView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
